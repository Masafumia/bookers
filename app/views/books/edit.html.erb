<h2>Editing Book</h2>

<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %> </br>

<%= f.submit 'Update Book' %> </br>
<%= link_to 'Show',book_path(@book.id) %>
<p>|</p>
<%= link_to 'Back' ,books_path %>
<% end %>